<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="#D6EAF8">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archer 1"
                android:textColor="#616161"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/points_archer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp"
                android:fontFamily="sans-serif-light"
                android:layout_margin="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="points"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFEFE"
                android:text="+2 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusTwoFor0ne"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#566573"
                android:textColor="#FDFEFE"
                android:text="+4 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusFourForOne"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5DADE2"
                android:text="+6 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusSixForOne"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CD6155"
                android:text="+8 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusEightForOne"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4D03F"
                android:text="+10 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusTenForOne"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archer 2"
                android:textColor="#616161"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/points_archer_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_margin="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="points"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDFEFE"
                android:text="+2 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusTwoForTwo"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#566573"
                android:textColor="#FDFEFE"
                android:text="+4 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusFourForTwo"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5DADE2"
                android:text="+6 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusSixForTwo"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CD6155"
                android:text="+8 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusEightForTwo"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4D03F"
                android:text="+10 Points"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="plusTenForTwo"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:onClick="reset"/>

</RelativeLayout>